{
	"parser": "babel-eslint",

	"parserOptions":  {
		"sourceType": "module",
		"allowImportExportEverywhere": false,
		"babelOptions": {
			"configFile": "../babel.config.js"
		},
		"ecmaFeatures": {
			"jsx": true
		}
	},

	"plugins": [
		"babel",
		"react",
		"react-native",
		"flowtype"
	],
	
	"settings": {
		"flowtype": {
			"onlyFilesWithFlowAnnotation": false
		}
	}
}